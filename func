    public function update_file ($link, $type, $file_id, $caption, $ext)
    {
        $sql = "UPDATE `files` SET type='$type',file_id='$file_id',caption='$caption',status='sent',ext='$ext' WHERE link='$link'";
        $this->prepare ($sql)->execute ();
