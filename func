    public function messages_to_delete ()
    {
        $res = $this->prepare (
            "SELECT * FROM `delete_message` where expire <= " . time ()
        )->resultStr ();

        $this->prepare (
            "DELETE FROM `delete_message` where expire <= " . time ()
        )->execute ();
        return $res;
    }

